generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  phone       String?
  role        Role     @default(STUDENT)
  status      Status   @default(ACTIVE)
  createdDate DateTime @default(now())
  lastLogin   DateTime?
  updatedAt   DateTime @updatedAt

  // TOTP 2FA Settings (Google Authenticator)
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?  // Encrypted TOTP secret
  twoFactorBackupCodes String[] @default([]) // Backup recovery codes

  @@index([email])
  @@index([role])

  //custom privileges
  customPrivileges  String[] @default([])
  revokedPrivileges String[] @default([])
}

enum Role {
  STUDENT
  TEACHER
  LAB_ASSISTANT
  PRINCIPAL
  ADMIN
}

enum Status {
  ACTIVE
  INACTIVE
}