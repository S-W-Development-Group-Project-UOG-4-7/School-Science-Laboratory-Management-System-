

generator client {
   provider = "prisma-client-js"
 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Inventory {
  id                  Int    @id @default(autoincrement())
  name                String
  category            Category
  stockLevel          Int
  minStockLevel       Int
  unit                String
  location            String
  photo               String?
  storageInstructions String?
  handlingProcedure   String?
  safetyNotes         String?
  lastUpdated         DateTime  @updatedAt
  requests            InventoryRequest[]

   
}

model InventoryRequest {
  id            Int    @id @default(autoincrement())
  requesterName String
  requesterRole String 
  requesterId   String  
  itemId        Int
  item          Inventory @relation(fields: [itemId], references: [id])
  quantity      Int
  reason        String
  urgency       Urgency
  status        RequestStatus @default(pending)
  requestDate   DateTime @default(now())
  responseDate  DateTime?
  responseNote  String?
}


enum Category {
  Glassware
  Equipment
  Chemicals
  Safety
  Instruments
}

enum Urgency {
  low
  medium
  high
}

enum RequestStatus {
  pending
  approved
  rejected
}

// Optional improvement: Use enum for requester roles
enum RequesterRole {
  LAB_ASSISTANT
  ADMIN
}

model PracticalSchedule {
  id           String   @id @default(cuid())
  title        String
  subject      Subject
  grade        String
  date         DateTime
  time         String
  duration     String
  teacher      String
  location     String
  notes        String?
  maxStudents  Int
  status       ScheduleStatus @default(UPCOMING)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Subject {
  Physics
  Chemistry
  Biology
}

enum ScheduleStatus {
  UPCOMING
  COMPLETED
  CANCELLED
}
