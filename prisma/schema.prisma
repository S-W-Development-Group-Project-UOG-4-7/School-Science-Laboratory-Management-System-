generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  phone       String?
  role        Role     @default(STUDENT)
  status      Status   @default(ACTIVE)
  createdDate DateTime @default(now())
  lastLogin   DateTime?
  updatedAt   DateTime @updatedAt

  // TOTP 2FA Settings (Google Authenticator)
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?  // Encrypted TOTP secret
  twoFactorBackupCodes String[] @default([]) // Backup recovery codes

  @@index([email])
  @@index([role])

  //custom privileges
  customPrivileges  String[] @default([])
  revokedPrivileges String[] @default([])
}

enum Role {
  STUDENT
  TEACHER
  LAB_ASSISTANT
  PRINCIPAL
  ADMIN
}

enum Status {
  ACTIVE
  INACTIVE
}
model Inventory {
  id                  Int                @id @default(autoincrement())
  name                String
  category            Category
  stockLevel          Int
  minStockLevel       Int
  unit                String
  location            String
  photo               String?
  storageInstructions String?
  handlingProcedure   String?
  safetyNotes         String?
  lastUpdated         DateTime           @updatedAt
  requests            InventoryRequest[]
}
model InventoryRequest {
  id            Int           @id @default(autoincrement())
  requesterName String
  requesterRole String
  requesterId   String
  itemId        Int
  item          Inventory     @relation(fields: [itemId], references: [id])
  quantity      Int
  reason        String
  urgency       Urgency
  status        RequestStatus @default(pending)
  requestDate   DateTime      @default(now())
  responseDate  DateTime?
  responseNote  String?

  approvalToken  String   @unique
  tokenExpiresAt DateTime
}

enum Category {
  Glassware
  Equipment
  Chemicals
  Safety
  Instruments
}

enum Urgency {
  low
  medium
  high
}
enum RequestStatus {
  pending
  approved
  rejected
}