generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  TEACHER
  LAB_ASSISTANT
  PRINCIPAL
  ADMIN
}

enum CorrectAnswer {
  A
  B
  C
  D
}

enum UserStatus {
  ONLINE
  OFFLINE
}

model User {
  id        Int        @id @default(autoincrement())
  name      String?    @db.VarChar(100)
  email     String     @unique @db.VarChar(100)
  role      UserRole   @default(STUDENT)
  status    UserStatus @default(OFFLINE)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations


  quizAttempts      QuizAttempt[]
  sessions          Session[]
  attendances       Attendance[]
  labSheetDownloads LabSheetDownload[]
}

model Practical {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(200)
  subject   String   @db.VarChar(100)
  lab       String   @db.VarChar(100)
  dateTime    DateTime
  grade       String   @default("Grade 10") @db.VarChar(50)
  teacherName String?  @db.VarChar(100)
  description String?  @db.Text
  duration    String?  @db.VarChar(50)
  maxStudents Int      @default(30)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations

  notes             Note[]

  quizzes           Quiz[]
  attendances       Attendance[]
  labSheetDownloads LabSheetDownload[]
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
}

model Attendance {
  id          Int              @id @default(autoincrement())
  studentId   Int
  practicalId Int
  status      AttendanceStatus @default(PRESENT)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relations
  student   User      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  practical Practical @relation(fields: [practicalId], references: [id], onDelete: Cascade)

  @@unique([studentId, practicalId])
  @@index([studentId])
  @@index([practicalId])
}



model Note {
  id          Int      @id @default(autoincrement())
  practicalId Int
  title       String   @db.VarChar(200)
  fileUrl     String?  @db.Text
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  practical Practical @relation(fields: [practicalId], references: [id], onDelete: Cascade)

  @@index([practicalId])
}



model Quiz {
  id          Int      @id @default(autoincrement())
  practicalId Int
  title       String   @db.VarChar(200)
  totalMarks  Int      @default(100)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  practical    Practical      @relation(fields: [practicalId], references: [id], onDelete: Cascade)
  questions    QuizQuestion[]
  quizAttempts QuizAttempt[]

  @@index([practicalId])
}

model QuizQuestion {
  id            Int           @id @default(autoincrement())
  quizId        Int
  questionText  String        @db.Text
  optionA       String        @db.VarChar(200)
  optionB       String        @db.VarChar(200)
  optionC       String        @db.VarChar(200)
  optionD       String        @db.VarChar(200)
  correctAnswer CorrectAnswer
  marks         Int           @default(1)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@index([quizId])
}

model QuizAttempt {
  id        Int      @id @default(autoincrement())
  quizId    Int
  studentId Int
  score     Float
  answers   Json? // Store answers as JSON: { questionId: "A" }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  quiz    Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([quizId, studentId])
  @@index([quizId])
  @@index([studentId])
}

model Session {
  id         Int       @id @default(autoincrement())
  userId     Int
  loginTime  DateTime  @default(now())
  logoutTime DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([loginTime])
}

model LabSheetDownload {
  id          Int      @id @default(autoincrement())
  studentId   Int
  practicalId Int
  filename    String   @db.VarChar(255)
  downloadedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  student  User      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  practical Practical @relation(fields: [practicalId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([practicalId])
  @@index([downloadedAt])
}

model Inventory {
  id                Int      @id @default(autoincrement())
  instrumentName    String   @db.VarChar(200)
  description       String?  @db.Text
  quantity          Int      @default(0)
  safetyPrecautions String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
