// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  phone     String?
  role      String
  createdAt DateTime @default(now())

  activityLogs     ActivityLog[]
  labSchedules     LabSchedule[]
  practicals       Practical[]        @relation("CreatedPracticals")
  InventoryRequest InventoryRequest[]
}

model LabSchedule {
  id       Int      @id @default(autoincrement())
  title    String
  subject  String
  date     DateTime
  time     String
  location String
  status   String

  teacherId Int
  teacher   User @relation(fields: [teacherId], references: [id])

  createdAt DateTime @default(now())
}

model Practical {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  subject     String
  grade       String
  duration    Int
  difficulty  String
  videoUrl    String?
  labSheetUrl String?

  createdBy Int
  creator   User @relation("CreatedPracticals", fields: [createdBy], references: [id])

  createdAt DateTime @default(now())
}

model InventoryItem {
  id          Int    @id @default(autoincrement())
  name        String
  category    String
  quantity    Int
  minQuantity Int
  location    String
  status      String
}

model InventoryRequest {
  id       Int     @id @default(autoincrement())
  itemName String
  quantity Int
  priority String
  status   String
  reason   String
  response String?

  requestedBy Int
  requester   User @relation(fields: [requestedBy], references: [id])
}

model ActivityLog {
  id      Int    @id @default(autoincrement())
  action  String
  details String

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
